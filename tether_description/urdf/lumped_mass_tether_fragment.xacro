<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <!--tether model-->
    <xacro:macro name="tether">
        <!--tether fragment param-->
        {%- set lump_mass = 0.1 -%}
        {%- set lump_radius = 0.01 -%}
        {%- set lump_inertia = 3*lump_mass*lump_radius**2 -%}
        {%- set element_length = 1.0 -%}
        <!--joint dynamics-->
        {%- set damping = 0.1 -%}
        {%- set friction = 0.1 -%}
        <!--link number-->
        {%- set tether_fragments = 5 -%}
        {%- set tether_number = 4 -%}

        {%- macro tether_fragment(dirc, n) -%}
        <link name="tether_{{dirc}}/fragment_{{n}}">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <sphere radius="{{lump_radius}}"/>
                </geometry>
            </visual>
            <inertial>
                <mass value="{{lump_mass}}"/>
                <inertia ixx="{{lump_inertia}}" iyy="{{lump_inertia}}" izz="{{lump_inertia}}" ixy="0.0" ixz="0.0" iyz="0.0"/>
            </inertial>
            <collision>
                <geometry>
                    <sphere radius="{{lump_radius}}"/>
                </geometry>
            </collision>
        </link>
        <gazebo reference="tether_{{dirc}}/fragment_{{n}}">
            <material>Gazebo/Red</material>
        </gazebo>
        {%- endmacro -%}

        <!--tether_cylinder_joint-->
        {%- macro tether_joint(dirc, n) -%}
        <!--tether fragment joint-->
        <joint name="tether_{{dirc}}/joint_{{n}}" type="continuous">
            <origin rpy="0 0 0" xyz="0 0 {{element_length}}"/>
            <parent link="tether_{{dirc}}/fragment_{{n-1}}"/>
            <child link="tether_{{dirc}}/fragment_{{n}}"/>
            <axis xyz="1 0 0" />
            <dynamics damping="{{damping}}" friction="{{friction}}"/>
        </joint>
        {%- endmacro -%}

        {%- macro uav_joint(dirc) -%}
        <!--uav => tether joint-->
        <joint name="tether_{{dirc}}/uav_joint" type="fixed">
            <parent link="${namespace}/base_link"/>
            <child link="tether_{{dirc}}/fragment_0"/>
            {% if dirc == 0 %}
                <origin rpy="0 ${pi/2} 0" xyz="0 0 0"/>
            {% elif dirc == 1 %}
                <origin rpy="${pi/2} 0 0" xyz="0 0 0"/>
            {% elif dirc == 2 %}
                <origin rpy="0 ${-pi/2} 0" xyz="0 0 0"/>
            {% elif dirc == 3 %}
                <origin rpy="${-pi/2} 0 0" xyz="0 0 0"/>
            {% endif %}
        </joint>
        {%- endmacro -%}

        {%- macro ugv_joint(dirc) -%}
        <!--tether end joint-->
        <joint name="tether_{{dirc}}/ugv_joint_1" type="continuous">
            {% if dirc == 0 %}
                <origin rpy="0 ${-pi/2} 0" xyz="0 0 {{element_length}}"/>
            {% elif dirc == 1 %}
                <origin rpy="${-pi/2} 0 0" xyz="0 0 {{element_length}}"/>
            {% elif dirc == 2 %}
                <origin rpy="0 ${pi/2} 0" xyz="0 0 {{element_length}}"/>
            {% elif dirc == 3 %}
                <origin rpy="${pi/2} 0 0" xyz="0 0 {{element_length}}"/>
            {% endif %}
            <parent link="tether_{{dirc}}/fragment_{{tether_fragments-1}}"/>
            <child link="mp_500_{{dirc}}/tether_end"/>
            <axis xyz="1 0 0" />
            <dynamics damping="{{damping}}" friction="{{friction}}"/>
        </joint>
        {%- endmacro -%}

        <!-- main-->
        {% for dirc in range(0,tether_number) %}
            {% for n in range(0,tether_fragments) -%}
                {{tether_fragment(dirc, n)}}
                {% if n != 0 %}
                    {{tether_joint(dirc, n)}}
                {% endif %}
            {% endfor -%}
            {{uav_joint(dirc)}}
            {{ugv_joint(dirc)}}
        {% endfor -%}

    </xacro:macro>
</robot>
