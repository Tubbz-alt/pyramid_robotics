<?xml version="1.0"?>
<robot name="tether_fragment">
    <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
    </material>
    <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
    </material>
    <material name="blue">
        <color rgba="0 0 1.0 0.5"/>
    </material>

    <link name="world"/>

    <joint name="Joint1" type="continuous">
        <parent link="world"/>
        <child link="tether_fragment1"/>
        <axis xyz="1 0 0"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="tether_fragment1">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0.05"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.01" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.05"/>
            <material name="blue"/>
        </visual>
    </link>

    <joint name="Joint2" type="continuous">
        <parent link="tether_fragment1"/>
        <child link="tether_fragment2"/>
        <axis xyz="1 0 0"/>
        <origin xyz="0 0 0.1"/>
    </joint>

    <link name="tether_fragment2">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0.05"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.01" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.05"/>
            <material name="blue"/>
        </visual>
    </link>

    <joint name="Joint_roll" type="continuous">
        <parent link="tether_fragment2"/>
        <child link="small_link1"/>
        <axis xyz="1 0 0"/>
        <origin xyz="0 0 0.1"/>
    </joint>

    <link name="small_link1">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0.0005"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
        <!--visual>
            <geometry>
                <cylinder length="0.001" radius="0.001" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.0005"/>
            <material name="red"/>
        </visual-->
    </link>

    <joint name="Joint_pitch" type="continuous">
        <parent link="small_link1"/>
        <child link="small_link2"/>
        <axis xyz="0 1 0"/>
        <origin xyz="0 0 0.001"/>
    </joint>

    <link name="small_link2">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0.0005"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
        <!--visual>
            <geometry>
                <cylinder length="0.001" radius="0.001" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.0005"/>
            <material name="red"/>
        </visual-->
    </link>

    <joint name="Joint_yaw" type="continuous">
        <parent link="small_link2"/>
        <child link="tether_fragment3"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0 0 0.001"/>
    </joint>

    <link name="tether_fragment3">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0.05"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.01" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.05"/>
            <material name="blue"/>
        </visual>
    </link>

    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <robotNamespace>tether</robotNamespace>
        </plugin>
    </gazebo>
</robot>
