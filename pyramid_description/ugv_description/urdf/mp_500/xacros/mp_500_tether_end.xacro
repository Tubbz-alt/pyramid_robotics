<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mp_500">

    <xacro:macro name="mp_500_tether_end" params="name">

        <joint name="${name}_joint" type="continuous">
            <parent link="${name}" />
            <child link="${namespace}/base_link" />
            <origin xyz="0.0 0.0 -0.03" rpy="0 0 0" />
            <axis xyz="0 0 1" />
        </joint>

        <link name="${name}">
            <visual>
                <geometry>
                    <cylinder length="0.05" radius="0.02"/>
                </geometry>
            </visual>
            <inertial>
                <mass value="1.0"/>
                <inertia ixx="1.0" iyy="1.0" izz="1.0" ixy="0.0" ixz="0.0" iyz="0.0"/>
            </inertial>
            <collision>
                <geometry>
                    <cylinder length="0.05" radius="0.02"/>
                </geometry>
            </collision>
        </link>
        <gazebo>
            <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
                <robotNamespace>pelican</robotNamespace>
                <jointName>${namespace}/tether_end_joint</jointName>
                <updateRate>1000</updateRate>
                <alwaysOn>true</alwaysOn>
            </plugin>
        </gazebo>

    </xacro:macro>

</robot>
