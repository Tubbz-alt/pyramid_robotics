<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <arg name="ugv_name" default="mp_500"/>
    <arg name="world_name_global" default="worlds/empty.world"/>
    <arg name="software_joystick" value="true"/>
    <arg name="namespace" value="$(arg ugv_name)"/>

    <!--Gazebo Variables-->
    <arg name="world" default="empty"/>
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name_global)"/>
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="headless" value="$(arg headless)"/>
        <arg name="debug" value="$(arg debug)"/>
    </include>

    <group ns="$(arg ugv_name)_1">
        <include file="$(find ugv_description)/launch/pyramid_mp_500/pyramid_spawn_mp_500.launch">
            <arg name="x" value="1.0"/>
            <arg name="namespace" value="$(arg ugv_name)_1" />
        </include>

        <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
            <param name="rate" value="20.0"/>
        </node>

        <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher">
            <param name="publish_frequency" value="20.0"/>
        </node>
    </group>

    <group ns="$(arg ugv_name)_2">
        <include file="$(find ugv_description)/launch/pyramid_mp_500/pyramid_spawn_mp_500.launch">
            <arg name="y" value="1.0"/>
            <arg name="namespace" value="$(arg ugv_name)_2" />
        </include>

        <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
            <param name="rate" value="20.0"/>
        </node>

        <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher">
            <param name="publish_frequency" value="20.0"/>
        </node>
    </group>

    <group ns="$(arg ugv_name)_3">
        <include file="$(find ugv_description)/launch/pyramid_mp_500/pyramid_spawn_mp_500.launch">
            <arg name="x" value="-1.0"/>
            <arg name="namespace" value="$(arg ugv_name)_3" />
        </include>

        <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
            <param name="rate" value="20.0"/>
        </node>

        <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher">
            <param name="publish_frequency" value="20.0"/>
        </node>
    </group>

    <group ns="$(arg ugv_name)_4">
        <include file="$(find ugv_description)/launch/pyramid_mp_500/pyramid_spawn_mp_500.launch">
            <arg name="y" value="-1.0"/>
            <arg name="namespace" value="$(arg ugv_name)_4" />
        </include>

        <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
            <param name="rate" value="20.0"/>
        </node>

        <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher">
            <param name="publish_frequency" value="20.0"/>
        </node>
    </group>

    <node pkg="ugv_control" type="pyramid_teleop_keyboard.py" name="teleop_keyboard"  output="screen"/>
    
</launch>
