<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <arg name="ugv_name" default="mp_500"/>
    <arg name="x" default="0.0"/>
    <arg name="y" default="0.0"/>
    <arg name="z" default="0.0"/>
    <arg name="namespace" default="$(arg ugv_name)" />

    <param name="robot_description"
        command=
            "$(find xacro)/xacro '$(find ugv_description)/urdf/mp_500/mp_500.urdf.xacro'
             namespace:=$(arg namespace)"/>

    <node name="mp_500_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
        args=
            "-urdf
             -param robot_description
             -x $(arg x)
             -y $(arg y)
             -z $(arg z)
             -model $(arg namespace)" >
    </node>

</launch>
