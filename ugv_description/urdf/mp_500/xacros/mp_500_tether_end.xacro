<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mp_500">

    <xacro:property name="counter_weight_mass" value="5.0" />
    <xacro:property name="counter_weight_x" value="0.1" />
    <xacro:property name="counter_weight_y" value="0.1" />
    <xacro:property name="counter_weight_z" value="0.1" />

    <xacro:macro name="mp_500_tether_end" params="name">

        <joint name="${name}_joint" type="continuous">
            <parent link="${name}" />
            <child link="${namespace}/base_link" />
            <origin xyz="0.0 0.0 -0.03" rpy="0 0 0" />
            <axis xyz="0 0 1" />
        </joint>

        <link name="${name}">
            <visual>
                <geometry>
                    <cylinder length="0.05" radius="0.02"/>
                </geometry>
            </visual>
            <inertial>
                <mass value="1.0"/>
                <inertia ixx="1.0" iyy="1.0" izz="1.0" ixy="0.0" ixz="0.0" iyz="0.0"/>
            </inertial>
            <collision>
                <geometry>
                    <cylinder length="0.05" radius="0.02"/>
                </geometry>
            </collision>
        </link>

    </xacro:macro>

    <xacro:macro name="counter_weight" params="name">

        <joint name="${name}_joint" type="fixed">
            <parent link="${namespace}/base_link" />
            <child link="${name}" />
            <origin xyz="-0.4 0.0 0.4" rpy="0 0 0" />
        </joint>

        <link name="${name}">
            <visual>
                <geometry>
                    <box size="${counter_weight_x} ${counter_weight_y} ${counter_weight_z}"/>
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <box size="${counter_weight_x} ${counter_weight_y} ${counter_weight_z}"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="${counter_weight_mass}"/>
                <inertia ixx="1/12*${counter_weight_mass}*(${counter_weight_y}**2+${counter_weight_z}**2)" iyy="1/12*${counter_weight_mass}*(${counter_weight_z}**2+${counter_weight_x}**2)" izz="1/12*${counter_weight_mass}*(${counter_weight_x}**2+${counter_weight_y}**2)" ixy="0" ixz="0" iyz="0"/>
            </inertial>
        </link>

    </xacro:macro>

</robot>
