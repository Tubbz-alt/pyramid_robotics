<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mp_500">

    <xacro:macro name="mp_500_tether_end" params="name">

        <joint name="${name}_joint" type="continuous">
            <parent link="${name}" />
            <child link="${namespace}/base_link" />
            <origin xyz="0.0 0.0 -0.4" rpy="0 0 0" />
            <axis xyz="0 0 1" />
        </joint>

        <link name="${name}">
            <visual>
                <geometry>
                    <cylinder length="0.2" radius="0.02"/>
                </geometry>
            </visual>
            <inertial>
                <mass value="1.0"/>
                <inertia ixx="1.0" iyy="1.0" izz="1.0" ixy="0.0" ixz="0.0" iyz="0.0"/>
            </inertial>
            <collision>
                <geometry>
                    <cylinder length="0.2" radius="0.02"/>
                </geometry>
            </collision>
        </link>

        </xacro:macro>

</robot>
